<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="therdldev.client.cssbundles.Resources"/>
    <ui:style>

        textarea { padding: 0.5em; margin: 0.2em; width: 40%; height: 6em; border: solid 1px; }
        input { margin: 0.5em; }
        #menu { margin:10px; padding-left: 10px; width:70%;  }
        div.goog-toolbar-button { margin-left:10px;     }

        #tab1, #tab2, #tab3 {  margin:10px 20px 0 40px; padding-left: 10px;   }
        #tab1 { display: none; }
        #tab2 { display: none; }
        #tab3 { display: none; }

        .empty { text-align: center; margin: 2em; }

        .row { border: solid 1px #333;  width:60%;  }
        .row  .summary, .row .description { padding: 0.5em; width:50%;  }
        .row  .summary { font-weight: normal; font-size: 12px; }

        div.customControl11 { margin:10px; display:inline-block; }
        div.customControl12 { margin:10px; display:inline-block; }
        div.customControl21 { margin:10px; display:inline-block; }
        div.customControl22 { margin:10px; display:inline-block; }


        .centerPanel {
        position:realtive;
        margin:30px 0px  0px 10px;
        top:66px;
        display:inline-block;
        width:80%;
        background-color: #FFC;
        }

    </ui:style>
    <!-- weird google syntax no method parenthesis in ui binder also list css embedded in editor css -->
    <g:HTMLPanel styleName=" {res.editorCss.getText}">

        <span class="{style.centerPanel}">

        <div id="menu"></div>  <!-- html tags -->
        <div id="snipList"></div>
        <div id="tab1"></div>
        <div id="tab2"></div>
        <div id="tab3"></div>

        <div id="rows">
        </div>
        </span>
        -
    </g:HTMLPanel>
</ui:UiBinder>