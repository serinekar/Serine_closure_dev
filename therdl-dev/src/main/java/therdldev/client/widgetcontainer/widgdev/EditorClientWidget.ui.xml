<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="res" type="therdldev.client.cssbundles.Resources"/>
	<ui:style>


        .main {
        padding: 10px;
        width:100%;
        height:100%;
        }


        .toolbar {
        padding: 10px;
        width:602px;
        }

        .editorDiv {
        padding: 10px;
        width:100%;
        height:100%;
        }


		
	</ui:style>
    <!-- weird google syntax no method parenthesis in ui binder -->
    <g:HTMLPanel styleName=" {res.editorCss.getText}">
        <div id='toolbar' class="{style.toolbar}"></div>
        <div id='editorDiv' class="{style.editorDiv}"></div>

    </g:HTMLPanel>
</ui:UiBinder> 